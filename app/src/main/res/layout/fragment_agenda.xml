<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".AgendaFragment">

    <TextView
        android:id="@+id/urgent_tasks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarefas Urgentes"
        android:textColor="#E90505"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/urgent_tasks_recycler_view"
        android:layout_width="380dp"
        android:layout_height="284dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/normal_tasks_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/urgent_tasks_title"
        tools:listitem="@layout/item_tarefa" />

    <TextView
        android:id="@+id/normal_tasks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Outras Tarefas"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/normal_tasks_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/urgent_tasks_recycler_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/normal_tasks_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/normal_tasks_title"
        tools:listitem="@layout/item_tarefa" />

    <!-- BotÃ£o flutuante para adicionar tarefa -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_task_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="#8B5AEB"
        app:tint="#1E1E1E"
        android:contentDescription="Adicionar nova tarefa"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
