<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".AdicionarTarefaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título da Tela -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="Nova Tarefa"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Campo de Título -->
        <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext_bg"
            android:hint="Título da Tarefa"
            android:inputType="textCapSentences"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!-- Campo de Descrição -->
        <EditText
            android:id="@+id/edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext_bg"
            android:gravity="top"
            android:hint="Descrição detalhada"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/text_view_data_selecionada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecionar Prazo"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:drawablePadding="8dp"
            android:background="@drawable/rounded_edittext_bg"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de Tempo Estimado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tempo Estimado (minutos):"
                android:textColor="#040303"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_text_estimated_time"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_bg"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
        <Switch
            android:id="@+id/switch_urgente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urgente"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
        <!-- Botão de Salvar -->
        <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8B5AEB"
            android:text="Salvar Tarefa"
            android:textColor="#1E1E1E"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
